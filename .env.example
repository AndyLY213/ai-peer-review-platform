# AI Peer Review Platform - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# LLM Provider (gemini, openai, ollama, etc.)
LLM_PROVIDER=gemini

# LLM Model Configuration
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=120

# =============================================================================
# Google Gemini Configuration
# =============================================================================

# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (gemini-2.0-flash, gemini-1.5-pro, etc.)
GEMINI_MODEL=gemini-2.0-flash

# =============================================================================
# OpenAI Configuration (Alternative)
# =============================================================================

# Uncomment and configure if using OpenAI instead of Gemini
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4
# OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Ollama Configuration (Alternative)
# =============================================================================

# Uncomment and configure if using Ollama instead of Gemini
# OLLAMA_MODEL=qwen2.5:7b
# OLLAMA_API_BASE=http://localhost:11434

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

# =============================================================================
# Simulation Configuration
# =============================================================================

# Default number of researchers to create
DEFAULT_RESEARCHERS=10

# Default starting tokens per researcher
DEFAULT_TOKENS=100

# Enable/disable various simulation features
ENABLE_BIAS_SIMULATION=true
ENABLE_NETWORK_EFFECTS=true
ENABLE_CAREER_TRACKING=true
ENABLE_FUNDING_SIMULATION=true

# =============================================================================
# Database Configuration
# =============================================================================

# Database file path (SQLite)
DATABASE_PATH=peer_review_workspace/simulation.db

# Enable database logging
DATABASE_LOGGING=false

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum concurrent API calls
MAX_CONCURRENT_CALLS=5

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG_MODE=false

# Enable detailed logging
VERBOSE_LOGGING=false

# Save simulation results
SAVE_RESULTS=true

# Results directory
RESULTS_DIR=simulation_results